# git aliases (also uses ~/.gitconfig)
alias g="git"
alias gco="git co"
alias gcod="git cod"
alias gfo="git fo"
alias gnb="git nb"
alias gnbx="git nbx"
alias gst="git st"

# mercurial aliases
alias hgg="hg glog -l10" 
alias hgi="hg in" 
alias hgo="hg out" 
alias hgs="hg status" 
alias hgd="hg diff --color=always | less -R" 
alias hgp="hg push" 
alias hgr="hg pull --rebase" 
alias hgrp="hg pull --rebase ; hg push" 

# zeus aliases
alias zs="zeus start"
alias zt="zeus s thin -u"
alias zc="zeus c"
alias zr="zeus rspec spec/"

# some paths
alias devportal="cd ~/code/devportal"
alias devapi="cd ~/code/devportal/devapi"
alias portal="cd ~/code/devportal/portal"
